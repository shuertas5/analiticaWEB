link(rel="shortcut icon" href="#")
link(rel="stylesheet", href="/css/bootstrap.min.css")
div(class="container")
    div(class="alta")
        img(src="/img/mas.svg" class="icono_table" alt="Alta" title="Alta")
        label
            a(href="/correcciones_analiticas_detalle?opcion=alta" style="font-weight: bold;" data-link) Alta de Corrección Analítica
div(class="d-flex flex-column") 
    div(class="container" style="height: calc(100vh - 195px);overflow-y: auto;margin-bottom: 10px;")
        div(class="table-responsive")
            table(class="table table-striped table_size_3")
                thead(class="thead-dark")
                    tr
                        th Opciones
                        th Indice
                        th Hoja 
                        th Linea
                        th Titulo Linea
                        th Importe
                        th Causa de la corrección
                tbody
                each n in rows
                    tr 
                        td 
                            a(href="/correcciones_analiticas_detalle?opcion=consulta&indice="+n.indice data-link) 
                                img(src="./img/ver.svg" class="icono_table" alt="Consulta" title="Consulta")
                            a(href="/correcciones_analiticas_detalle?opcion=modificacion&indice="+n.indice data-link)
                                img(src="./img/edit.svg" class="icono_table" alt="Editar" title="Editar")
                            a(href="/correcciones_analiticas_detalle?opcion=baja&indice="+n.indice data-link)
                                img(src="./img/delete.svg" class="icono_table" alt="Baja" title="Baja")
                        td= n.indice
                        td(style="text-align: right;")= n.hoja 
                        td(style="text-align: right;")= n.linea
                        td= n.titulo_linea 
                        td(style="text-align: right;font-family: monospaced;")= n.importe_str
                        td= n.causa
script. 
    
    window.onload = function(e) {
        const nodes = document.getElementsByTagName("PRI_IMA");
        if (nodes.length==0) {
            window.location="./frontend/index0.html";
        }
    }
